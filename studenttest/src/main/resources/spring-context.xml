<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="parseCsv" class="ru.homework.parse.ParseCsvImpl">
        <constructor-arg name="fileNameQuestion" value="questions.csv" />
        <constructor-arg name="delimiter" value="\\t" />
    </bean>

    <bean id="convertToMap" class="ru.homework.convert.ConvertToMapImpl">
        <constructor-arg name="parseCsv" ref="parseCsv"/>
    </bean>

    <bean id="outPutQuestions" class="ru.homework.output.OutPutQuestionsImpl">
        <constructor-arg name="convertToMap" ref="convertToMap"/>
        <constructor-arg name="separatorLine" value="------------------------------"/>
    </bean>

</beans>
